<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d" FontFamily="Lato" FontSize="14"
        Title="WPF Application" Height="550" Width="900">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Column="0" Grid.RowSpan="6">
            <Rectangle.Fill>
                <SolidColorBrush Color="LightSkyBlue"/>
            </Rectangle.Fill>
        </Rectangle>

        <Image Source="Logo.png" Grid.Column="0" Grid.Row="0" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="buttonAddVehicle" Content="Add Vehicle" Grid.Column="0" Grid.Row="2" Margin="5, 10"/>
        <Button x:Name="buttonRemoveVehicle" Content="Remove Vehicle" Grid.Column="0" Grid.Row="3" Margin="5, 10"/>
    </Grid>
</Window>
