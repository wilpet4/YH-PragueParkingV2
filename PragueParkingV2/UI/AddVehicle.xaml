<Window x:Class="PragueParkingUI.AddVehicle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PragueParkingUI"
        mc:Ignorable="d" FontFamily="Lato" FontSize="12"
        Title="AddVehicle" Height="400" Width="400" SizeToContent="WidthAndHeight">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,12,0,0" TextWrapping="Wrap" Text="Registration: " VerticalAlignment="Top" Width="70"/>
        <TextBox Name="textBoxRegistration" HorizontalAlignment="Left" Margin="80,11,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="110"/>
        <ComboBox Name="comboBoxParkingSpots" HorizontalAlignment="Left" Margin="310,10,0,0" VerticalAlignment="Top" Width="80" Height="18" IsEnabled="False" SelectionChanged="comboBoxParkingSpots_SelectionChanged"/>
        <Button Name="buttonAdd" Content="Add" HorizontalAlignment="Center" Margin="0,347,0,0" VerticalAlignment="Top" Width="56" Height="27" IsEnabled="False" Click="buttonAdd_Click"/>
        <ComboBox Name="comboBoxVehicleType" HorizontalAlignment="Left" Margin="200,10,0,0" VerticalAlignment="Top" Width="80" Height="18" IsEnabled="True" SelectionChanged="comboBoxVehicleType_SelectionChanged"/>
    </Grid>
</Window>
